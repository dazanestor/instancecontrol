<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #121212;
            color: #ffffff;
            font-family: Arial, sans-serif;
        }

        .container {
            text-align: center;
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        h1 {
            margin-bottom: 20px;
        }

        button {
            background-color: #6200ea;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            margin: 10px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #3700b3;
        }

        #status {
            margin-top: 20px;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1><%= pageTitle %></h1>
        <button id="startBtn">Encender</button>
        <button id="stopBtn">Apagar</button>
        <div id="status">Obteniendo estado de la instancia...</div>
    </div>

    <script>
        // Función para actualizar el estado de la instancia
        function updateStatus() {
            fetch('/status')
                .then(response => response.text())
                .then(data => {
                    document.getElementById('status').innerText = data;
                })
                .catch(error => {
                    document.getElementById('status').innerText = 'Error al obtener el estado';
                    console.error('Error:', error);
                });
        }

        // Llamar a updateStatus cada 5 segundos para actualizar el estado
        setInterval(updateStatus, 5000);

        // Botones para encender y apagar la instancia
        document.getElementById('startBtn').addEventListener('click', function() {
            fetch('/start', { method: 'POST' })
                .then(response => response.text())
                .then(data => alert(data))
                .then(() => updateStatus());
        });

        document.getElementById('stopBtn').addEventListener('click', function() {
            fetch('/stop', { method: 'POST' })
                .then(response => response.text())
                .then(data => alert(data))
                .then(() => updateStatus());
        });

        // Obtener el estado inicial de la instancia al cargar la página
        updateStatus();
    </script>
</body>
</html>
